<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArsMediaApp.Pages.PostDetail"
             
             
             Title="PostDetail">
    <VerticalStackLayout>
        <Label Text="{Binding PostName}" FontSize="22" Margin="10" />
        <Label Text="{Binding PostContent}" FontSize="17" />
        <Label Text="{Binding Likes}" FontSize="12" />
        <Label Text="{Binding PostDetail}" FontSize="17" />
    </VerticalStackLayout>
</ContentPage>