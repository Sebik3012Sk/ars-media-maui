<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArsMediaApp.Pages.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout>
        <Entry x:Name="email_entry" Placeholder="Enter your email" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Entry x:Name="password_entry" Placeholder="Enter your password" IsPassword="True" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Button Text="Login" Clicked="loginBtClicked" HorizontalOptions="Center" VerticalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>